        <div class="col-7">
            <form action="#" id="contactForm">

                <div class="row">
                    <div class="col-6"><input type="text" name="name" id="name"  class="form-control" required placeholder="Name"></div>
                    <div class="col-6"><input type="email" name="email" id="email"  class="form-control" required placeholder="E-mail"></div>
                </div>
                <div class="row">
                    <div class="col-12"><input type="text" name="subject" id="subject" class="form-control" required placeholder="Subject"></div>
                </div>
                
                <div class="row">
                    <div class="col-12"><textarea rows="5" name="message" id="message" class="form-control" required placeholder="Message"></textarea></div>
                </div>
                <div class="row">
                    <div class="col-12"><button type="submit" class="btn btn-primary badge-pill">Submit</button></div>
                </div>
            </form>
        </div>
    </div>


