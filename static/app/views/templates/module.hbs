{{!-- {{> headerStuff react=true redux=true marked=true mathjax=true }} --}}

<div class="outerContainer">
    {{!-- {{> navbar moduleActive='active' }} --}}

    <div class="pt-1 jumbotron jumbotron-fluid">
        <div class="container">
            <div class="row">
                <div class="col-10 mt-2 pr-0">
                    <h5>{{name}}</h5>
                </div>
                <div class="col-2 mt-2 pl-0" id="moduleTimer"></div>
                <div class="col-10">
                    <p>{{description}}</p>
                </div>
                <input type="hidden" id="moduleId" value={{id}}>
                <input type="hidden" id="courseId" value={{course_id}}>
                <input type="hidden" id="totalElements" value={{totalElements}}>
                <input type="hidden" id="timeLimit" value={{time_limit}}>
                <input type="hidden" id="maxAttempts" value={{max_attempts}}>
            </div>
            <main id="moduleInterface">

                <div class="row">
                    <div class="col-10">
                        <span class="text-primary" id="feedback"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-9">
                        <div id="moduleControls" class="row">

                            <div class="col-3 pr-0">
                                <button class="btn p-0 btn btn-primary" id="speak">
                                    <span class="badge badge-info"><i class="fas fa-book-reader"></i></span>

                                </button>
                                <button class="btn p-0 btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalId">
                                    <span class="badge badge-info"><i class="fas fa-sliders-h"></i></span>
                                </button>
                            </div>
                            <div class="col-3 px-1">
                                <button id="previousElement" class="form-control btn btn-primary btn-std d-none">Back <span
                                        class="badge badge-success"><i class="fas fa-backward"></i></span></button>
                            </div>
                            <div class="col-3 px-1">
                                <button id="nextElement" class="form-control btn btn-primary btn-std d-none">Next <span
                                        class="badge badge-success"><i class="fas fa-angle-double-right"></i></span></button>
                            </div>
                            <div class="col-3 px-1">
                                <button id="finishModule" class="form-control btn btn-std btn-success d-none">Done! <span
                                        class="badge badge-success"><i class="fas fa-check"></i></span></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">

                    </div>
                </div>
                <div id="element"></div>
            </main>
        </div>
    </div>
</div>



<!-- Configure-Speech Modal -->
<div class="modal fade" id="modalId" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Configure Speech</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <select name="voice" id="voices" style="width: 100%">
                    <option value="">Select a voice</option>
                </select>
                <div class="row py-2">
                    <div class="col-6">
                        <label for="rate">Rate:</label>
                        <input class="form-control" type="range" name="rate" min="0" max="3" value="1" step="0.1">
                    </div>
                    <div class="col-6">
                        <label for="pitch">Pitch:</label>
                        <input class="form-control" type="range" name="pitch" min="0" max="2" step="1">
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>