<div id="products" class="container py-5">
    <h2 class="text-center mb-4">Our Products</h2>
    
    {{#if category}}
        <h3 class="text-muted">Category: {{category}}</h3>
    {{/if}}
    
    <p class="text-muted">{{products.length}} products available</p>

    <div class="row">
        {{#each products}}
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                {{#if image_url}}
                <img src="{{image_url}}" class="card-img-top" alt="{{name}}" style="height: 200px; object-fit: cover;">
                {{else}}
                <img src="/public/images/placeholder-product.jpg" class="card-img-top" alt="{{name}}" style="height: 200px; object-fit: cover;">
                {{/if}}
                
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text flex-grow-1">{{description}}</p>
                    
                    {{#if category}}
                    <p class="text-muted small mb-2">
                        <i class="fas fa-tag"></i> {{category}}
                    </p>
                    {{/if}}
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="text-primary mb-0">${{price}}</h4>
                        {{#if in_stock}}
                        <span class="badge badge-success">In Stock</span>
                        {{else}}
                        <span class="badge badge-secondary">Out of Stock</span>
                        {{/if}}
                    </div>
                    
                    <div class="mt-3">
                        <a href="/app.html?page=product&detail={{id}}" class="btn btn-outline-primary btn-block">
                            View Details
                        </a>
                        {{#if in_stock}}
                        <button class="btn btn-primary btn-block add-to-cart-btn mt-2" data-product-id="{{id}}">
                            <i class="fas fa-shopping-cart"></i> Add to Cart
                        </button>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    {{#unless products}}
    <div class="text-center py-5">
        <h3 class="text-muted">No products found</h3>
        <p>Check back later for new products!</p>
    </div>
    {{/unless}}
</div>
