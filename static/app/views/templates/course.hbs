<div class="pt-1 jumbotron jumbotron-fluid">
    <div class="container">
        <input type="hidden" id="courseId" value="{{id}}">
        <header class="row">
            <div class="col-7 pr-0">
                <h1 class="form-text display-5">{{name}}</h1>
                <div id="description">{{description}}</div>
            </div>
            <div class="col-5 pr-0" id="instructors"></div>
        </header>
        <main class="row">
            <div class="col-12">
                <label for="homeContentMarked"></label>
                <div class="d-none" id="homeContentRaw">{{home_content}}</div>
                <div class="form-text border" id="homeContentMarked"></div>
            </div>
        </main>

        <div id="modules"></div>
    </div>
</div>