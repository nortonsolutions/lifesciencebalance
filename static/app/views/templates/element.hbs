
<div class="progress my-1">
    <div class="progress-bar" role="progressbar" style="width: {{{divide currentElementNumber totalElements}}}%;" aria-valuenow="{{currentElementNumber}}" aria-valuemin="0" aria-valuemax="{{totalElements}}">{{currentElementNumber}} of {{totalElements}}</div>
</div>
<div class="form-group row">
    {{#if image_location}}
    <div class="col-7" id="mainElementPanel">
    {{else}}
    <div class="col-12" id="mainElementPanel">
    {{/if}}    
        <input type="hidden" id="elementType" name="elementType" value="{{type}}">
        <label style="width: 100%" for="element">Element #{{currentElementNumber}}: <span id="correctOrIncorrect"></span></label>
        <div id="elementRaw" class="d-none">{{text}}</div>
        <div id="elementMarked"></div>

        <div id="responseCheckboxes" class="{{{hideIfNotEqual type "multi" "single"}}}">
            <label for="element">Select your answer(s):</label>
            {{#each choices}}
            <div class="row {{{hideIfNot text}}}">
                {{#if ../reviewMode}}
                    {{#if ../showAnswers}}
                    <div class="col-1 px-0">
                        <label class="customCheckboxContainer">
                        <input disabled id="answer{{@index}}" name="answer{{@index}}" type="checkbox" {{{booleanCheckboxHelper correct}}}>
                        <span class="checkmark"></span>
                        </label>
                    </div>
                    {{/if}}
                {{else}}
                    <div class="col-1 px-0"></div>
                {{/if}}

                <div class="col-1 checkboxContainer px-0" >
                    <input class="checkbox" id="checkbox{{@index}}" name="checkbox{{@index}}" type="checkbox" {{{disabledIf ../reviewMode}}}>
                </div>
                <div class="col-10 px-0">
                    <div id="text{{@index}}" class="bg-white p-2 border" name="text{{@index}}" aria-describedby="helpId">{{text}}</div>
                </div>

            </div>
            {{/each}}
        </div>
        

        <div id="responseText" class="{{{hideIfNotEqual type "text"}}}">
            <label for="answerText">Response:</label>
            <input type="text" class="form-control" name="answerText" id="answerText" aria-describedby="helpId" placeholder="Enter response..." value="{{answerText}}">
            <small id="helpId" class="form-text text-muted">Enter your response above.</small>
            {{#if reviewMode}}
                {{#if showAnswers}}
                <label>Expected Response (Regex):</label><br>
                /{{answerTextRegex}}/
                {{/if}}
            {{/if}}

        </div>
        
        <div id="responseEssay" class="{{{hideIfNotEqual type "essay"}}}">
            <label for="answerEssay">Essay:</label>
            <textarea class="form-control" name="answerEssay" id="answerEssay" rows="4" placeholder="Enter response...">{{answerEssay}}</textarea>
            <small id="helpId" class="form-text text-muted">Enter your response above.</small>
            {{#if reviewMode}}
                {{#if showAnswers}}
                <label>Expected Response (Regex):</label><br>
                /{{answerEssayRegex}}/
                {{/if}}
            {{/if}}
        </div>

        <div id="projectSubmission" class="{{{hideIfNotEqual type "projectSubmission"}}}">
            <div id="userProjectLink"></div>
            
            {{#unless reviewMode}}
            <label for="projectSubmissionForm">Submit Project:</label>
            <div class="custom-file">
                <form id="projectSubmissionForm">
                    <input type="file" class="custom-file-input" name="file" id="file">
                    <label id="projectFileLabel" class="custom-file-label" for="file">Choose file</label>
                    <div class="mt-2"><small class="font-italic">Please use filename convention: [lastname]-[firstname]-[project].zip</small></div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            {{/unless}}
        </div>

        {{#if video_location}}
            <div class="bigMediaContainer"><video class="videoPresentation" src="{{video_location}}" alt="Element Video" controls></video></div>
        {{/if}}

        <hr>
    </div>
    {{#if image_location}}
    
    <div class="col-5">
        <label for="elementImage">Click to open full-size</label>
        <div class="mt-3 elementImage" id="{{image_location}}"><img width="100%" class="noclick" src="{{image_location}}" alt="Element Image"></div>
    </div>
    {{/if}}
    <input class="d-none" type="text" name="elementId" id="elementId" value="{{id}}">
</div>

