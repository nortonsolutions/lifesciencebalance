<div id="shopping-cart" class="container py-5">
    <h2 class="mb-4">Shopping Cart</h2>
    
    {{#if items}}
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Subtotal</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each items}}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {{#if product.image_url}}
                                        <img src="{{product.image_url}}" alt="{{product.name}}" style="width: 60px; height: 60px; object-fit: cover;" class="mr-3">
                                        {{/if}}
                                        <div>
                                            <h6 class="mb-0">{{product.name}}</h6>
                                            <small class="text-muted">{{product.category}}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>${{product.price}}</td>
                                <td>
                                    <input type="number" class="form-control quantity-input" 
                                           value="{{quantity}}" min="1" max="10" 
                                           data-product-id="{{product_id}}"
                                           style="width: 80px;">
                                </td>
                                <td>${{multiply product.price quantity}}</td>
                                <td>
                                    <button class="btn btn-sm btn-danger remove-item-btn" 
                                            data-product-id="{{product_id}}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    
                    <div class="text-right mt-3">
                        <a href="/app.html?page=products" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Order Summary</h5>
                    <hr>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Items ({{itemCount}}):</span>
                        <span>${{total}}</span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <span>TBD</span>
                    </div>
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong>${{total}}</strong>
                    </div>
                    
                    <button id="checkoutBtn" class="btn btn-primary btn-block btn-lg">
                        Proceed to Checkout
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="text-center py-5">
        <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
        <h3>Your cart is empty</h3>
        <p class="text-muted">Add some products to get started!</p>
        <a href="/app.html?page=products" class="btn btn-primary">
            Browse Products
        </a>
    </div>
    {{/if}}
</div>

<script>
    // Handlebars helper for multiplication
    Handlebars.registerHelper('multiply', function(a, b) {
        return (a * b).toFixed(2);
    });
</script>
